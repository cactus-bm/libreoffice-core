alliso:=$(foreach,l,$(alllangext) $(iso_$(l)))

# create old output format
$(MISC)$/instance$/%.xml : $(MISC)$/xcdformat$/%.xcd
    java -Xmx128m -classpath $(COMMON_BUILD_TOOLS)$/xt.jar$(PATH_SEPERATOR)$(COMMON_BUILD_TOOLS)$/parser.jar$(PATH_SEPERATOR)$(COMMON_BUILD_TOOLS)$/jaxp.jar$(PATH_SEPERATOR)$(CLASSDIR)$/cfgimport.jar org.openoffice.configuration.XMLDefaultGenerator $< $(PRJ)$/util $(MISC) $(PRJ)$/data

# convert to old format xcd format
$(MISC)$/xcdformat$/%.xcd : %.xcs
    -$(MKDIR) $(@:d)
    java -Xmx128m -classpath $(COMMON_BUILD_TOOLS)$/xt.jar$(PATH_SEPERATOR)$(COMMON_BUILD_TOOLS)$/parser.jar$(PATH_SEPERATOR)$(CLASSDIR)$/cfgimport.jar -Dcom.jclark.xsl.sax.parser=com.sun.xml.parser.Parser com.jclark.xsl.sax.Driver $< $(PRJ)$/util$/rschema.xsl $(MISC)$/xcdformat$/$(<:d)$(<:b).xcd xcu=$(PRJ)$/registry$/data$/$(<:d)$(<:b).xcu schemaRoot=$(PRJ)$/registry$/schema 

# stripping schema files 
$(MISC)$/registry$/schema$/%.xcs : %.xcs
    -$(MKDIR) $(@:d)
    java -Xmx128m -classpath $(COMMON_BUILD_TOOLS)$/xt.jar$(PATH_SEPERATOR)$(COMMON_BUILD_TOOLS)$/parser.jar -Dcom.jclark.xsl.sax.parser=com.sun.xml.parser.Parser com.jclark.xsl.sax.Driver $< $(PRJ)$/util$/schema_trim.xsl $(MISC)$/registry$/schema$/$(<:d)$(<:b).tmp
    java -Xmx128m -classpath $(COMMON_BUILD_TOOLS)$/parser.jar$(PATH_SEPERATOR)$(CLASSDIR)$/schema.jar org.openoffice.helper.PrettyPrinter $(MISC)$/registry$/schema$/$(<:d)$(<:b).tmp $(MISC)$/registry$/schema$/$(<:d)$(<:b).xcs

# creating a locale independent file 
$(MISC)$/registry$/data$/%.xcu : %.xcu
    -$(MKDIR) $(@:d) 
    java -Xmx128m -classpath $(COMMON_BUILD_TOOLS)$/xt.jar$(PATH_SEPERATOR)$(COMMON_BUILD_TOOLS)$/parser.jar -Dcom.jclark.xsl.sax.parser=com.sun.xml.parser.Parser com.jclark.xsl.sax.Driver $< $(PRJ)$/util$/alllang.xsl $(MISC)$/registry$/data$/$(<:d)$(<:b).tmp
    java -Xmx128m -classpath $(COMMON_BUILD_TOOLS)$/parser.jar$(PATH_SEPERATOR)$(CLASSDIR)$/schema.jar org.openoffice.helper.PrettyPrinter $(MISC)$/registry$/data$/$(<:d)$(<:b).tmp $(MISC)$/registry$/data$/$(<:d)$(<:b).xcu

# creating locale dependent entries
$(MISC)$/registry$/res$/{$(alliso)}$/%.xcu :| %.xcu
    -$(MKDIR) $(@:d)
    java -Xmx128m -classpath $(COMMON_BUILD_TOOLS)$/xt.jar$(PATH_SEPERATOR)$(COMMON_BUILD_TOOLS)$/parser.jar -Dcom.jclark.xsl.sax.parser=com.sun.xml.parser.Parser com.jclark.xsl.sax.Driver $< $(PRJ)$/util$/alllang.xsl $@ locale={$(subst,$/$<, $(subst,$(MISC)$/registry$/res$/, $@))}	
    
