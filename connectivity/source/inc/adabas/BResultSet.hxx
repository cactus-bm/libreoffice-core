namespace connectivity
{
    namespace adabas
    {
        class OAdabasResultSet :    public  ::connectivity::odbc::OResultSet
        {
        public:
            OAdabasResultSet(SQLHANDLE _pStatementHandle,::connectivity::odbc::OStatement_Base* pStmt)
