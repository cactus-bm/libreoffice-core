#!/usr/bin/perl -w

use strict;

die "Usage: $0 identifier\n" .
    "(identifier is for example org.libreoffice)" unless $#ARGV == 0;

my $id = $ARGV[0];

open (LOGCAT, "adb logcat |") || die "Could not open pipe from adb logcat";
my $pid = '';

while (<LOGCAT>) {
  if (m!^I/ActivityManager\( *\d+\): Start proc $id for activity .*: pid=(\d+)!) {
    $pid = $1;
  } elsif (m!^[EIW]/[^(]+\( *$pid\)!) {
    print $_;
  }
}
