        Size = MAP_APPFONT ( MA_TOTAL_WIDTH - RSC_SP_TBPG_INNERBORDER_LEFT - RSC_SP_TBPG_INNERBORDER_RIGHT - 12, RSC_CD_CHECKBOX_HEIGHT );
        Text [ de ] = "Text sichtbar beim ~Starten" ;
        Text [ en-US ] = "S~tart inside" ;
        Text [ x-comment ] = " ";
    };
